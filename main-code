import requests
import time


def get_weather():
    url= "http://api.weatherapi.com/v1/forecast.json?key= 741a648e81bf44c28d7122536251410&q=Honfleur,France&days=14&aqi=no&alerts=no"

    response = requests.get(url)
    print(response)
    if response.status_code == 200:

        data = response.json() #permet d’accéder aux données de l'api sous forme de dictionnaire python

        temp_actuelle=data["current"]["temp_c"]
        heure=data["location"]["localtime"]
        uv=data["current"]["uv"]


    print(f"la temperature actuelle est de {temp_actuelle}°")
    print(heure)
    print(uv)

print(get_weather())
